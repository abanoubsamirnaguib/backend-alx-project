# ============================================
# Django Settings
# ============================================

# Secret key - GENERATE A NEW ONE FOR PRODUCTION!
# Run: python generate_secret_key.py
SECRET_KEY=django-insecure-your-secret-key-here-generate-a-new-one-for-production

# Debug mode - MUST be False in production!
DEBUG=False

# Allowed hosts - comma-separated domain list
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================

# Database engine: 'sqlite' or 'postgresql'
# Use 'postgresql' for Railway with PostgreSQL
DB_ENGINE=postgresql

# PostgreSQL Configuration (used when DB_ENGINE=postgresql)
POSTGRES_DB=custom_food_builder
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_HOST=your-railway-db-host.railway.internal
POSTGRES_PORT=5432

# ============================================
# CORS Configuration
# ============================================

# Allow all origins (only for development!)
CORS_ALLOW_ALL_ORIGINS=False

# Specific allowed origins (comma-separated)
# Frontend URLs that can access this API
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://yourdomain.com,http://localhost:3000,http://localhost:5173

# ============================================
# JWT Configuration (already using SECRET_KEY)
# ============================================

JWT_SECRET_KEY=your-secret-key-here-or-leave-empty-to-use-SECRET_KEY

# ============================================
# Additional Settings
# ============================================

# Email configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Media files location (for production, consider using cloud storage)
MEDIA_ROOT=/media
MEDIA_URL=/media/

# Static files location
STATIC_ROOT=/staticfiles
STATIC_URL=/static/

# ============================================
# Optional: AWS S3 for Media Files
# ============================================

# Uncomment these to use AWS S3 for storing media files
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_ACCESS_KEY_ID=your-access-key
# AWS_S3_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_CUSTOM_DOMAIN=%s.s3.amazonaws.com
# AWS_DEFAULT_ACL=public-read

# ============================================
# Optional: Sentry for Error Tracking
# ============================================

# SENTRY_DSN=https://your-sentry-url@sentry.io/your-project-id

